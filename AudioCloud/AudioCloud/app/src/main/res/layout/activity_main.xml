<?xml version="1.0" encoding="utf-8"?>
<!--
  This is the main layout file for the activity.
  It uses a traditional LinearLayout to stack views.
  We'll include a standard TextView managed by XML and
  a ComposeView which will host our modern Jetpack Compose UI.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F8F8F8"
    tools:context=".MainActivity">

    <!-- A traditional TextView managed by XML -->
    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="My Audiobook Player"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!--
      This is the magic part. This ComposeView is a container
      that allows us to render Jetpack Compose content inside
      an XML-based layout.
    -->
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/compose_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>